{
  "name": "effect-test",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "predev": "run-s -s db:ensure",
    "gm": "node --env-file=.env ./node_modules/.bin/graphile-migrate",
    "db:latest": "run-s -s 'gm watch --once'",
    "db:watch": "run-s -s 'gm watch'",
    "db:reset": "run-s -s 'gm reset --erase'",
    "db:up": "docker-compose up -d db",
    "db:stop": "docker-compose stop db",
    "db:exec": "docker-compose exec db",
    "db:types": "kysely-codegen --dialect postgres",
    "db:ensure": "node ./scripts/dbEnsure.mjs",
    "db:setup": "node --env-file=.env ./scripts/dbSetup.mjs",
    "db:init": "run-s db:up db:setup db:reset db:latest",
    "env:init": "node ./scripts/generateEnvFile.mjs",
    "init": "NOCONFIRM=1 run-s env:init db:init",
    "tsc:watch": "tsc --watch --preserveWatchOutput",
    "server:watch": "run-p 'server:build --watch' server:exec:watch",
    "server:exec": "node --env-file=.env dist/server.js",
    "server:exec:watch": "node --env-file=.env --watch dist/server.js",
    "server:build": "esbuild server/index.ts --bundle --packages=external --platform=node --format=esm --outfile=dist/server.js",
    "client:watch": "node --env-file=.env ./node_modules/.bin/vite dev",
    "vitest:run": "vitest run",
    "vitest:watch": "vitest dev --clearScreen=false",
    "test": "run-s vitest:run",
    "dev": "run-p -s server:watch client:watch db:watch"
  },
  "dependencies": {
    "@effect/experimental": "^0.30.13",
    "@effect/platform": "^0.69.9",
    "@effect/platform-bun": "^0.48.6",
    "@effect/platform-node": "^0.63.6",
    "@effect/rpc": "^0.44.9",
    "@effect/rpc-http": "^0.42.9",
    "@effect/sql-kysely": "^0.13.10",
    "@effect/sql-pg": "^0.18.10",
    "effect": "^3.10.4",
    "graphile-migrate": "^2.0.0-rc.2",
    "kysely": "^0.27.4",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.48.2",
    "postgres": "github:DanielFGray/postgres.js",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@effect/vitest": "^0.13.6",
    "@testcontainers/postgresql": "^10.13.2",
    "@types/bun": "latest",
    "kysely-codegen": "^0.17.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vite-tsconfig-paths": "^5.1.0",
    "vitest": "^2.1.4"
  }
}
